{
  "compilerOptions": {
    "baseUrl": ".", // 设置根路径
    "paths": {
      "@/*": [
        "./app/*"
      ], // 用 @/ 来访问 app 目录
      "@/utils": [
        "./utils"
      ] // 用 @/utils 来访问 utils 目录
    },
    "strict": true, // 启用严格模式
    "esModuleInterop": true, // 启用 ES 模块兼容
    "skipLibCheck": true // 跳过库的类型检查
    ,
    "target": "ES2017",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "noEmit": true,
    "incremental": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "app/**/*",
    "components/**/*",
    "utils/**/*" // 确保包括 utils 目录
    ,
    ".next/types/**/*.ts",
    ".next/dev/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
