/**app.wxss - Design System v2.0 **/
page {
  /* Color Palette */
  --bg-page: #F8FAFC;
  --bg-card: #FFFFFF;
  --bg-input: #F1F5F9;
  --bg-tab: rgba(255, 255, 255, 0.85);
  --bg-tab-active: #E0F2FE;
  --bg-chip: #E2E8F0;
  --bg-chip-active: #E0F2FE;
  --bg-badge: #DCFCE7;
  --bg-pill: #E0F2FE;
  
  /* Primary Colors */
  --primary: #0EA5E9;
  --primary-dark: #0284C7;
  
  /* Text Colors */
  --text-primary: #0F172A;
  --text-secondary: #64748B;
  --text-muted: #94A3B8;
  --text-white: #FFFFFF;
  --text-success: #16A34A;
  --text-link: #0284C7;
  --text-danger: #EF4444;
  
  /* Status Colors */
  --dot-blue: #3B82F6;
  --dot-red: #EF4444;
  
  /* Shadows */
  --shadow-card: 0 8rpx 24rpx rgba(15, 23, 42, 0.06);
  --shadow-tab: 0 6rpx 20rpx rgba(15, 23, 42, 0.06);
  
  /* Border Radius */
  --radius-card: 32rpx;
  --radius-input: 24rpx;
  --radius-tab: 32rpx;
  --radius-tab-item: 24rpx;
  --radius-pill: 999rpx;
  --radius-chip: 999rpx;
  --radius-map: 24rpx;
  --radius-btn: 24rpx;
  
  /* Spacing */
  --gap-page: 32rpx;
  --gap-card: 16rpx;
  --gap-small: 12rpx;
  --gap-xs: 8rpx;
  --padding-card: 24rpx;
  --padding-input: 20rpx;
  --padding-tab: 16rpx;
  --padding-chip: 8rpx 16rpx;
  
  /* Typography */
  --text-xs: 22rpx;
  --text-sm: 24rpx;
  --text-base: 26rpx;
  --text-lg: 28rpx;
  --text-xl: 30rpx;
  
  /* Font Weights */
  --font-normal: 400;
  --font-medium: 500;
  --font-semibold: 600;
  --font-bold: 700;

  /* Global Reset */
  background: var(--bg-page);
  color: var(--text-primary);
  font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, "Helvetica Neue", Arial, sans-serif;
  box-sizing: border-box;
}

view, text, button, input, textarea {
  box-sizing: border-box;
}

/* ===== Page Layout ===== */
.page {
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  padding: var(--gap-page) var(--gap-page) 0;
  gap: var(--gap-page);
  box-sizing: border-box;
}

/* ===== Tabs ===== */
.top-tabs {
  display: flex;
  align-items: center;
  justify-content: space-between;
  height: 112rpx;
  padding: var(--padding-tab);
  background: var(--bg-tab);
  border-radius: var(--radius-tab);
  box-shadow: var(--shadow-tab);
  gap: var(--gap-small);
  flex-shrink: 0;
}

.tab-item {
  flex: 1;
  height: 80rpx;
  border-radius: var(--radius-tab-item);
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  gap: var(--gap-xs);
  color: var(--text-muted);
  transition: all 0.2s ease;
}

.tab-item.active {
  background: var(--bg-tab-active);
  color: var(--primary);
}

.tab-icon {
  width: 18rpx;
  height: 18rpx;
  border-radius: var(--radius-pill);
  background: var(--text-muted);
}

.tab-item.active .tab-icon {
  background: var(--primary);
}

.tab-text {
  font-size: var(--text-sm);
  font-weight: var(--font-normal);
}

.tab-item.active .tab-text {
  font-weight: var(--font-bold);
}

/* ===== Module & Scroll ===== */
.module {
  flex: 1;
  overflow: hidden;
}

.module-scroll {
  height: 100%;
  padding-bottom: 40rpx;
}

/* ===== Cards ===== */
.card {
  background: var(--bg-card);
  border-radius: var(--radius-card);
  padding: var(--padding-card);
  margin-bottom: var(--gap-page);
  box-shadow: var(--shadow-card);
  display: flex;
  flex-direction: column;
  gap: var(--gap-card);
}

.card-title {
  font-size: var(--text-lg);
  font-weight: var(--font-bold);
  color: var(--text-primary);
}

.card-subtitle {
  font-size: var(--text-sm);
  font-weight: var(--font-bold);
  color: var(--text-primary);
}

/* ===== Inputs ===== */
.input-group {
  display: flex;
  flex-direction: column;
  gap: var(--gap-xs);
}

.input-label {
  font-size: var(--text-sm);
  font-weight: var(--font-bold);
  color: var(--text-primary);
}

.input-box {
  width: 100%;
  height: 80rpx;
  background: var(--bg-input);
  border-radius: var(--radius-input);
  padding: 0 var(--padding-input);
  display: flex;
  align-items: center;
  gap: var(--gap-small);
}

.input {
  flex: 1;
  height: 100%;
  font-size: var(--text-base);
  color: var(--text-primary);
  background: transparent;
  border: none;
}

.input::placeholder {
  color: var(--text-secondary);
  font-size: var(--text-sm);
}

/* ===== Hint Text ===== */
.hint {
  font-size: var(--text-xs);
  color: var(--text-muted);
}

/* ===== Buttons ===== */
.btn-primary {
  width: 100%;
  height: 88rpx;
  background: var(--primary);
  color: var(--text-white);
  border-radius: var(--radius-btn);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: var(--text-lg);
  font-weight: var(--font-bold);
  border: none;
  margin: 0;
}

.btn-primary::after {
  border: none;
}

/* ===== Pills ===== */
.pill {
  padding: var(--padding-chip);
  border-radius: var(--radius-pill);
  background: var(--bg-pill);
  color: var(--text-link);
  font-size: var(--text-xs);
  font-weight: var(--font-bold);
}

.pill-danger {
  background: #FEE2E2;
  color: var(--text-danger);
}

.badge {
  align-self: flex-start;
  padding: var(--padding-chip);
  border-radius: var(--radius-pill);
  background: var(--bg-badge);
  color: var(--text-success);
  font-size: var(--text-xs);
  font-weight: var(--font-bold);
}

/* ===== Chips ===== */
.chip-row {
  display: flex;
  gap: var(--gap-small);
}

.chip {
  padding: var(--padding-chip);
  border-radius: var(--radius-chip);
  background: var(--bg-chip);
  color: var(--text-secondary);
  font-size: var(--text-xs);
  font-weight: var(--font-bold);
}

.chip.active {
  background: var(--bg-chip-active);
  color: var(--primary-dark);
}

/* ===== Layout Helpers ===== */
.row-between {
  display: flex;
  align-items: center;
  justify-content: space-between;
  gap: var(--gap-small);
}

.row-center {
  display: flex;
  align-items: center;
  gap: var(--gap-xs);
}

/* ===== Map ===== */
.map-frame {
  width: 100%;
  height: 440rpx;
  border-radius: var(--radius-map);
  overflow: hidden;
  background: #E2E8F0;
}

.map {
  width: 100%;
  height: 100%;
}

/* ===== Dots ===== */
.dot {
  width: 16rpx;
  height: 16rpx;
  border-radius: var(--radius-pill);
}

.dot-blue {
  background: var(--dot-blue);
}

.dot-red {
  background: var(--dot-red);
}

/* ===== Suggestions ===== */
.suggestion-list {
  display: flex;
  flex-direction: column;
  gap: var(--gap-small);
}

.suggestion-item {
  background: var(--bg-page);
  border-radius: 20rpx;
  padding: 16rpx;
  display: flex;
  flex-direction: column;
  gap: 6rpx;
}

.suggestion-name {
  font-size: var(--text-base);
  color: var(--text-primary);
  font-weight: var(--font-semibold);
}

.suggestion-addr {
  font-size: var(--text-xs);
  color: var(--text-muted);
}

/* ===== Destination List ===== */
.dest-list {
  display: flex;
  flex-direction: column;
  gap: var(--gap-small);
}

.dest-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  gap: var(--gap-small);
  padding: 16rpx;
  background: var(--bg-page);
  border-radius: var(--radius-input);
}

.dest-info {
  display: flex;
  flex-direction: column;
  gap: 6rpx;
  flex: 1;
  min-width: 0;
}

.dest-name {
  font-size: var(--text-base);
  font-weight: var(--font-semibold);
  color: var(--text-primary);
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.dest-addr {
  font-size: var(--text-xs);
  color: var(--text-muted);
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

/* ===== Route Items ===== */
.route-list {
  display: flex;
  flex-direction: column;
  gap: var(--gap-small);
}

.route-item {
  background: var(--bg-page);
  border-radius: var(--radius-input);
  padding: 16rpx;
  display: flex;
  flex-direction: column;
  gap: 10rpx;
}

.route-title {
  font-size: var(--text-base);
  font-weight: var(--font-bold);
  color: var(--text-primary);
}

.route-addr {
  font-size: var(--text-xs);
  color: var(--text-secondary);
}

.route-meta {
  font-size: var(--text-xs);
  color: var(--text-primary);
}

/* ===== Result Text ===== */
.result-text {
  font-size: var(--text-xs);
  color: var(--text-secondary);
  line-height: 1.6;
}

/* ===== Empty State ===== */
.empty-hint {
  text-align: center;
  font-size: var(--text-sm);
  color: var(--text-muted);
  padding: 32rpx 0;
}

/* ===== Link Text ===== */
.text-link {
  color: var(--primary);
  font-size: var(--text-sm);
}

/* ===== Loading Animation ===== */
.loading-dot {
  width: 12rpx;
  height: 12rpx;
  border-radius: var(--radius-pill);
  background: var(--primary);
  animation: pulse 1s infinite;
}

@keyframes pulse {
  0% { opacity: 0.3; }
  50% { opacity: 1; }
  100% { opacity: 0.3; }
}
